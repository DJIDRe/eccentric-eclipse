---
import { type CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
 
type Props = {
    posts: CollectionEntry<'posts'>;
};

const { posts } = Astro.props;
---

<article>
    <a href={`/blog/${posts.slug}`}>
        <Image 
            src={posts.data.image}
            width={600}
            height={600 / 1.5}
            alt={posts.data.title}
            class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"
        />
    </a>
    <a 
        href={`/blog/${posts.slug}`}
        class="text-4xl text-zinc-900 font-semibold line-clamp-2"
    >
        <h2>{posts.data.title}</h2>
    </a>
    <p class="text-zinc-500 text-2xl line-clamp-2">
        {posts.body}
    </p>

</article>